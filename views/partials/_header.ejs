<!-- views/partials/header.ejs -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<nav class="navbar navbar-expand-md bg-light navbar-dark">
    <div class="container-fluid"> 
    <!-- Brand/logo -->
    <a class="navbar-brand" href="#">
      <img src="/public/Tiny.jpg".jpg alt="logo" style="width:200px;">
    </a>  
    <div class="navbar-header">
        <a href="/" ><h1>TinyApp</h1></a>
        <a class="hideOnShow" href="http://localhost:8080/urls/new">Create a New TinyURL</a>   
    </div>

<%if (user) {%> 
  <h2>
    Welcome back <strong><%= user.email %></strong>!
  </h2>
  <form class="form-inline" 
          action="/logOut" 
          method="POST">
  <div class="form-group mb-2">
    <button type="submit" class="btn btn-primary">Log Out</button>
  </div>
  </form>    

<%} else {%> 
    <div class="container">
    <form class="form-inline" 
    action="/login" 
    method="POST">
    <div class="form-group mb-2">
        <h3>Welcome back!</h3>
    <input class="form-control" 
        type="email" 
        name="email" 
        placeholder="Sign In" 
        style="width: 300px; margin: 1em">
    <input class="form-control" 
        type="password" 
        name="password" 
        placeholder="Password" 
        style="width: 300px; margin: 1em">
    <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
<%}%>
  </div>
</nav>
